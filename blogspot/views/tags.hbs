
{{#each post}}
<div class="post" style="background-image:url({{image}});">
  <a href="/posts/{{slug}}"><h1>{{title}}</h1></a>
  <div class="post-preview">
    <p>{{body}}</p>
  </div>
  <p class="read-more"><a href="/posts/{{slug}}">Read More</a></p>

  <div class="tags">
    <div class="header">Tags:</div>
    {{#each tags}}<a href="{{this}}"><button>{{this}}</button></a>{{/each}}
  </div>

  <p>By: {{author}} - {{date}}</p>
</div>
{{/each}}